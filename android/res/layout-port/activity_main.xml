<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/set_fire_wiz_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_wizard_wallpaper"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/set_snow_wiz_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_ice_wizard_wallpaper"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/set_electro_wiz_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_electro_wizard_wallpaper"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/shareapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_application"
        android:layout_marginTop="20dp"/>

</LinearLayout>